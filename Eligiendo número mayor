numeromayor=-9999999
contador=0
while True:
    numero=int(input("Ingresa un número o escribe -1 para detener el programa"))
    if numero==-1:
        break
    contador=1
    if numero>numeromayor:
        numeromayor=numero
if contador == 1:
    print ("El número mayor es ",numeromayor)
else:
    print("No se ha ingresado ningún número pedazo de imbécil")
